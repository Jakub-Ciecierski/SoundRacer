<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mini.game" >

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="21" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.mini.game.launcher.LauncherActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.mini.game.audio.AudioSampleActivity"
            android:label="@string/title_activity_audio_sample" >
        </activity>
        <activity
            android:name="com.example.mini.game.MyActivity"
            android:label="@string/title_activity_audio_sample" >
        </activity>
        <activity
            android:name="com.example.mini.game.gameMenu.MenuActivity"
            android:label="@string/title_activity_menu"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mini.game.gameMenu.GameSettingsActivity"
            android:label="@string/title_activity_game_settings"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.mini.game.gameMenu.StartGameActivity"
            android:label="@string/title_activity_start_game"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
